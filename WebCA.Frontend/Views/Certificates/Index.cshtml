@model IEnumerable<Mono.Security.X509.X509Certificate>
@section title {
Certificates
}
@section operations {
    <div class="btn-group">
        <a href="@Url.Action("Create")" class="btn">Create new certificate</a> <a href="@Url.Action("Sign")" class="btn">
            Sign a certificate</a>
    </div>
}
<h3>Certificate Authorities</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Issued at
            </th>
            <th>
                Not before
            </th>
            <th>
                Not after
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var certificate in Model.Where(n => n.GetIsCertificateAuthority()))
        {
            <tr>
                <td>
                    @Html.ActionLink(certificate.SubjectName, "Details", new { id = certificate.SerialNumber.FormatSerialNumber(true) })
                </td>
                <td>
                    @certificate.ValidFrom
                </td>
                <td>
                    @certificate.ValidUntil
                </td>
            </tr>
        }
    </tbody>
</table>
<h3>Other certificates</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Issued at
            </th>
            <th>
                Not before
            </th>
            <th>
                Not after
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var certificate in Model.Where(n => !n.GetIsCertificateAuthority()))
        {
            <tr>
                <td>
                    @Html.ActionLink(certificate.SubjectName, "Details", new { id = certificate.SerialNumber.FormatSerialNumber(true) })
                </td>
                <td>
                    @certificate.ValidFrom
                </td>
                <td>
                    @certificate.ValidUntil
                </td>
            </tr>
        }
    </tbody>
</table>